{
  "compilerOptions": {
    "module": "es2015",
    "target": "es5",
    "lib": ["dom", "es6"],
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "sourceMap": true
  },
  "include": [
    "./src/**/*"
  ]
}